#!/bin/bash
#PBS -l nodes=1:ppn=16,vmem=29gb,walltime=18:00:00
#PBS -N bl.freesurfer

set -e
set -x

[ -z "$FREESURFER_LICENSE" ] && echo "Please set FREESURFER_LICENSE in .bashrc" && exit 1;
echo $FREESURFER_LICENSE > license.txt

export SINGULARITYENV_OMP_NUM_THREADS=16

time singularity exec -e -B `pwd`/license.txt:/usr/local/freesurfer/license.txt docker://brainlife/freesurfer:7.1.1 ./freesurfer.sh


